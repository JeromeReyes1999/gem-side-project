<div class="container">
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    </div>
    <div class="carousel-inner" style="max-height: 400px">
      <div class="carousel-item active">
        <img src="/test/banner-1.jpeg" class="d-block w-100 overflow-hidden"  alt="...">
      </div>
      <div class="carousel-item">
        <img src="/test/banner-2.jpeg" class="d-block w-100 w-100 overflow-hidden"  alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>


<section class=" text-light bg-dark" style="height: 4vh;">
  <div>
    <div class="container">
      <div class="ticker">
        <div class="title"></div>
        <div class="news">
          <marquee class="news-content">
            <h4>Hello World</h4>
          </marquee>
        </div>
      </div>
    </div>
  </div>
</section>

  <div class="container" style="margin-bottom: 100px; margin-top: 5px">
    <div class="mb-2">
      <%= link_to 'All', users_lottery_path, class:"btn btn-info" if params[:category]%>
      <%= link_to 'All', users_lottery_path, class:"btn btn-primary" unless params[:category]%>
      <% @categories.each do |category| %>
        <%= link_to category.name, users_lottery_path(category: category.name), data_toggle: "tab", class:"btn btn-primary" if params[:category]==category.name%>
        <%= link_to category.name, users_lottery_path(category: category.name), data_toggle: "tab", class:"btn btn-info" unless params[:category]==category.name%>
      <% end %>
    </div>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-6 col-md-4 col-sm-6 col-lg-3">
          <div class="card shadow-none border-none mb-2 w-100 overflow-hidden" style="max-height: 350px; height:20vw; min-height: 220px">
            <div class="overflow-hidden">
            <%= image_tag item.image.url, class:'card-img-top img-responsive  ' if item.image?%>
            </div>
            <div class="card-footer flex-column mt-auto">
              <h6 class="text-start"><%= item.name %></h6>
              <div class="progress">
                <div class="progress-bar" role="progressbar" aria-label="Example with label" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
