      <div class="card m-auto mt-5"  style="min-width:300px; width:35%">
        <div class="card-body w-100">
            <div class="input-group mb-3">
                <input id="url" type="text" value=<%=@url %> class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2" readonly=true>
                <button id="copy_btn" onclick="copy()" class="btn btn-primary" type="button">Copy</button>
              </div>
          </div>
        </div>

<script>
  function copy() {
      const textArea = $("#url");
      textArea.focus();
      textArea.select();
      try {
        document.execCommand('copy');
        textArea.blur();
        window.getSelection().removeAllRanges();
        var btn = $("#copy_btn");
        btn.html('Copied');
        btn.addClass('btn-secondary');
        btn.removeClass('btn-warning');
        btn.blur()
      } catch (err) {
        console.error('Unable to copy to clipboard', err);
      }

  }

</script>