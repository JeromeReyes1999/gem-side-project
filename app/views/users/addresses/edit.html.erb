<div class="container">
  <div class="card">
      <div class="card-header">
          <%= link_to "❮ Back", users_addresses_path, class: 'btn btn-sm btn-outline-primary d-inline-block '%>
          <h5 class="d-inline-block align-middle mx-2 my-1">Edit Address</h5>
      </div>
      <div class="card-body">
        <%= form_for @address, url: users_address_path(@address), method: :patch do |f| %>
          <%= render partial: 'form', locals: {f: f, address: @address} %>
          <% if @address.is_default %>
            <%= f.check_box :is_default, onclick:"return false;", checked:true%>
          <% else %>
            <%= f.check_box :is_default %>
          <% end %>
          <%= f.label :is_default, 'Default' %>
          <%= f.submit "Update", class: 'border btn btn-primary form-control mt-2' %>
        <% end %>
        </div>
  </div>
</div>