<div class="container" style="height: 100vh; overflow: scroll;">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= link_to "Back", admin_items_path, class: 'btn btn-primary form-control w-50'%>

  <%= form_for @item, url: admin_item_path(@item), method: :patch do |f| %>
    <%= render partial: 'form', locals: {f: f, item: @item} %>
    <%= f.submit "Update", class: 'border btn btn-primary form-control' %>
  <% end %>
</div>