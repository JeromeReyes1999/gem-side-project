<style>
  p {
   font-size: 12px;
   margin-bottom: 4px
  }
</style>

<div class="field">
  <%= f.label :image %>
  <%= f.file_field :image, class: 'form-control', onchange:"update_image_preview(this)" %>
  <%= content_tag :p, item.errors.full_messages_for(:image).join(', '), class: 'text-danger m-1' if item.errors.has_key?(:image) %>
</div>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= content_tag :p, item.errors.full_messages_for(:name).join(', '), class: 'text-danger m-1' if item.errors.has_key?(:name) %>
</div>

<div class="field">
  <%= f.label :quantity %>
  <%= f.number_field  :quantity , class: 'form-control' %>
  <%= content_tag :p, item.errors.full_messages_for(:quantity).join(', '), class: 'text-danger m-1' if item.errors.has_key?(:quantity) %>
</div>

<div class="field">
  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.order(:name), :id, :name, { :prompt => 'select category' }, include_blank: true, class: 'form-control' %>
  <%= content_tag :p, item.errors.full_messages_for(:category).join(', '), class: 'text-danger m-1' if item.errors.has_key?(:category) %>
</div>

<div class="field">
  <%= f.label :minimum_bets %>
  <%= f.number_field  :minimum_bets , class: 'form-control' %>
  <%= content_tag :p, item.errors.full_messages_for(:minimum_bets).join(', '), class: 'text-danger m-1' if item.errors.has_key?(:minimum_bets) %>
</div>

<div class="field">
  <%= f.label :status %>
  <%= f.select(:status, Item.statuses.keys.map { |key| [key.humanize, key] }, { :prompt => 'status' }, class: 'form-control  form-control-sm') %>
  <%= content_tag :p, item.errors.full_messages_for(:status).join(', '), class: 'text-danger m-1' if item.errors.has_key?(:status) %>
</div>

<div class="field">
  <%= f.label :online_at %>
  <%= f.datetime_field  :online_at , class: 'form-control' %>
  <%= content_tag :p, item.errors.full_messages_for(:online_at).join(', '), class: 'text-danger m-1' if item.errors.has_key?(:online_at) %>
</div>

<div class="field">
  <%= f.label :offline_at %>
  <%= f.datetime_field  :offline_at , class: 'form-control' %>
  <%= content_tag :p, item.errors.full_messages_for(:offline_at).join(', '), class: 'text-danger m-1' if item.errors.has_key?(:offline_at) %>
</div>


<div class="field">
  <%= f.label :start_at%>
  <%= f.datetime_field  :start_at , class: 'form-control' %>
  <%= content_tag :p, item.errors.full_messages_for(:start_at).join(', '), class: 'text-danger m-1' if item.errors.has_key?(:start_at) %>
</div>
