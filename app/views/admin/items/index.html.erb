
<%= link_to "New", new_admin_item_path, class:"btn btn-success w-25"%>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th scope="col">Image</th>
    <th scope="col">Name</th>
    <th scope="col">Quantity</th>
    <th scope="col">Minimum bets</th>
    <th scope="col">Online at</th>
    <th scope="col">Offline at</th>
    <th scope="col">Start at</th>
    <th scope="col">Action</th>

  </tr>
  </thead>
  <tbody>
    <% @items.each do |item|%>
      <tr>
        <td ><%= image_tag item.image.url, style:"width: 200px" if item.image? %></td>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.minimum_bets %></td>
        <td><%= item.online_at %></td>
        <td><%= item.online_at %></td>
        <td><%= item.start_at %></td>
        <td>
          <%= link_to "edit", edit_admin_item_path(item), class: 'btn btn-warning'%>
          <%= form_for item, url: admin_item_path(item), method: :delete do |f| %>
            <%= f.submit 'delete', class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  <%unless @items.present?%>
    <tr>
      <td colspan="7" class="text-muted">
          No items to show
      </td>
    </tr>
  <% end %>
  </tbody>
</table>