<div class="card mt-4">
  <div class="card-body ">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th scope="col">Parent Email</th>
        <th scope="col">Email</th>
        <th scope="col">Total deposit</th>
        <th scope="col">Member Total Deposits</th>
        <th scope="col">Coins</th>
        <th scope="col">Total used coins</th>
        <th scope="col">Children members</th>
        <th scope="col">Phone number</th>
        <th scope="col">Action</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.parent&.email %></td>
          <td><%= user.email %></td>
          <td><%= user.total_deposit %></td>
          <td></td>
          <td><%= user.coins %></td>
          <td></td>
          <td></td>
          <td><%= user.phone %></td>
          <td><%= link_to "Balance Operate", admin_user_new_order_path( user, :increase), class:'btn btn-warning'%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
