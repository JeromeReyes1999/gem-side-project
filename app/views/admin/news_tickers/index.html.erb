<%= link_to 'New', new_admin_news_ticker_path, class: 'btn btn-primary w-25' %>
<div class="card mt-4">
  <div class="card-body ">
    <table class="table table-striped table-hover">
      <thead>
      <th>Sort</th>
      <th>Content</th>
      <th>Status</th>
      <th>Admin</th>
      <th>Action</th>
      </thead>
      <tbody>
      <% @news_tickers.each do |news_ticker| %>
        <tr>
          <td><%= news_ticker.sort%></td>
          <td><%= news_ticker.content%></td>
          <td><%= news_ticker.status%></th>
          <td><%= news_ticker.admin.email%></th>
          <td>
            <%= link_to 'edit', edit_admin_news_ticker_path(news_ticker), class: 'btn btn-warning' %>
            <%= link_to "delete", admin_news_ticker_path(news_ticker), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
      <% unless @news_tickers.present?%>
        <tr>
          <td colspan="4" class="text-muted">
            No news tickers to show
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
