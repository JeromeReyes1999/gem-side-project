<!--Page-->
<div class="container">
  <div class="card">
    <div class="card-header">
      <%= link_to "❮ Back", admin_banners_path, class: 'btn btn-sm btn-outline-primary d-inline-block '%>
       <h5 class="d-inline-block align-middle mx-2 my-1">Create Banner</h5>
     </div>
    <div class="card-body">
    <%= form_for @banner, url: admin_banners_path(@banner), method: :post do |f| %>
      <%= render partial: 'form', locals: {f: f, banner: @banner} %>
      <%= f.submit "Create", class: 'border btn btn-primary form-control mt-3' %>
    <% end %>
    </div>
  </div>
</div>
