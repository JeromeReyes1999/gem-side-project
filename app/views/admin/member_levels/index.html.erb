<%= link_to 'New', new_admin_member_level_path, class: 'btn btn-primary w-25' %>
<div class="card mt-4">
  <div class="card-body ">
    <table class="table table-striped table-hover">
      <thead>
      <th>Level</th>
      <th>Required members</th>
      <th>Coins</th>
      <th>Action</th>
      </thead>
      <tbody>
      <% @member_levels.each do |member_level| %>
        <tr>
          <td><%= member_level.level%></td>
          <td><%= member_level.required_members%></th>
          <td><%= member_level.coins%></th>
          <td>
            <%= link_to 'edit', edit_admin_member_level_path(member_level), class: 'btn btn-warning' %>
            <%= link_to "delete", admin_member_level_path(member_level), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
      <% unless @member_levels.present?%>
        <tr>
          <td colspan="4" class="text-muted">
            No member levels to show
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
