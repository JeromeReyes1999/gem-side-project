<%= render "shared/banner" %>

<section>
  <div class="container overflow-hidden">
    <h5>Winners Feedback</h5>
    <div class="row row-cols-3">
      <% @winners.limit(5).each do |winner| %>
        <div class="col">
          <%= link_to users_feedback_path(winner) do%>
          <div class="card shadow-none border-none mb-3 w-100 overflow-hidden" style="max-height: 300px; height:20vw; min-height: 20px">
            <div class="overflow-hidden">
               <%=image_tag winner.picture.url, class: 'card-img-top img-responsive'%>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
      <% if @winners.count > 5 %>
        <div class="col">
          <%= link_to users_feedbacks_path, class: "link-secondary text-decoration-none" do %>
            <div class="card shadow-none border-none mb-3 w-100 text-center" style="max-height: 300px; height:20vw; min-height: 20px">
              <div class="my-auto">Show more...</div>
            </div>
          <% end %>
        </div>
      <% end %>
      <% if @winners.blank? %>
        <div class="col">
          <div class="card shadow-none border-none mb-3 w-100 text-center align-middle" style="max-height: 300px; height:20vw; min-height: 20px">
            <div class="my-auto text-muted">No feedbacks to show</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!--coming soon-->
<section style="padding-bottom: 60px; padding-top: 10px">
  <div class="container overflow-hidden ">
    <h5>Coming Soon</h5>
    <div class="row row-cols-3">
      <% @items.limit(8).each do |item| %>
      <div class="col">
        <%= link_to users_lottery_path(item), class: "text-dark text-decoration-none" do%>
          <div class="card shadow-none border-none mb-3 w-100 overflow-hidden" style="max-height: 300px; height:20vw; min-height: 20px">
            <div class="overflow-hidden" style="height: 85%">
              <%= image_tag item.image.url, class: 'card-img-top img-responsive' %>
            </div>
            <div class="card-body py-0" style="height: 15%">
                <%= content_tag :div, item.name, class:'my-auto h-100'%>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
      <% if @items.count > 8 %>
        <div class="col">
          <%= link_to users_lottery_index_path, class: "link-secondary text-decoration-none" do %>
            <div class="card shadow-none border-none mb-3 w-100 text-center" style="max-height: 300px; height:20vw; min-height: 20px">
              <div class="my-auto">Show more...</div>
            </div>
          <% end %>
        </div>
      <% end %>
      <% if @items.blank? %>
        <div class="col">
          <div class="card shadow-none border-none mb-3 w-100 text-center align-middle" style="max-height: 300px; height:20vw; min-height: 20px">
            <div class="my-auto text-muted">No Item to show</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>